FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 298; //Initialize to the saturation temperature, but the wall is subcooled

boundaryField
{
    VertWall		//Subcooled wall
    {
        type        fixedValue;
        value       uniform 293;
    }

    FreeStream		//saturation at freestream
    {
        type		fixedValue;
		value		uniform 298;
    }

	Vane
	{
		type        zeroGradient;
	}

	Inlet
	{
		type    groovyBC;
        globalScopes ( "globalVars" );
		valueExpression  "T_w+(T_sat-T_w)*(pos().x/d_f)";
		value       uniform 0;
	}

    Top				//saturated inlet
    {
        type		fixedValue;
		value		uniform 298;
    }

    Bottom
    {
        type        zeroGradient;
    }

    Sides
    {
        type            empty;
    }
}


// ************************************************************************* //
