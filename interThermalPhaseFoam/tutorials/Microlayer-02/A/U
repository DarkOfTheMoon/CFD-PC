FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 10E-8);

boundaryField
{
    sp1
    {
		type            symmetryPlane;
    }

    sp2
    {
		type            symmetryPlane;
    }

    Base
    {
		type            MicrolayerBoilingVelocity;
		//type            fixedValue;
		value           uniform (0 0 0);
    }

    FarStream
    {
        type            zeroGradient;
    }

    Top
    {
        type            zeroGradient;
    }

    Axis
    {
        type            symmetryPlane;
    }

    FrontNBack_pos
    {
        type            wedge;
    }

    FrontNBack_neg
    {
        type            wedge;
    }
}


