WallHeatFlux
{
    valueType patch;
    patchName LeftSide;
    //condition "pos().y<0.65 && pos().y>0.3";
    accumulations (average);
	variables ( "k=0.892;" );
	expression "(pos().y<0.77) ? snGrad(T)*k : 672"; //(pos().y<0.65 && pos().y>0.3) ? snGrad(T)*k : 672
}
